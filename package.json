{
  "name": "design-patterns-typescript",
  "version": "1.0.0",
  "description": "Implementation of various design patterns in TypeScript",
  "main": "dist/index.js",
  "scripts": {
    "start": "ts-node src/index.ts",
    "build": "tsc",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "creational": "ts-node src/index.ts -c",
    "structural": "ts-node src/index.ts -s",
    "behavioral": "ts-node src/index.ts -b",
    "all": "ts-node src/index.ts -a"
  },
  "dependencies": {
    "chalk": "^4.1.2",
    "commander": "^9.0.0"
  },
  "devDependencies": {
    "@types/jest": "^27.5.2",
    "@types/node": "^17.0.21",
    "jest": "^27.5.1",
    "ts-jest": "^27.1.5",
    "ts-node": "^10.5.0",
    "typescript": "^4.9.5"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "roots": [
      "<rootDir>/src"
    ],
    "testMatch": [
      "**/__tests__/**/*.test.ts"
    ]
  }
}
